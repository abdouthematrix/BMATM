<UserControl
    x:Class="BMATM.Views.NavigationTestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border
        Padding="30"
        Background="White"
        BorderBrush="{StaticResource PrimaryBrush}"
        BorderThickness="2"
        CornerRadius="10">

        <StackPanel
            MaxWidth="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!--  Header  -->
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Navigation System Test" />

            <TextBlock
                Margin="0,0,0,30"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{StaticResource SecondaryBrush}"
                Text="Phase 2: MVVM Foundation &amp; Application Shell" />

            <!--  Status  -->
            <Border
                Margin="0,0,0,20"
                Padding="15"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="1"
                CornerRadius="5">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="{Binding CurrentView, StringFormat='Status: {0}'}" />
            </Border>

            <!--  Navigation Buttons Grid  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Row 1  -->
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding NavigateToLoginCommand}"
                    Content="Navigate to Login"
                    FontSize="14" />

                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding NavigateToATMCarouselCommand}"
                    Content="Navigate to ATM Carousel"
                    FontSize="14" />

                <!--  Row 2  -->
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding NavigateToCashReconciliationCommand}"
                    Content="Navigate to Cash Reconciliation"
                    FontSize="14" />

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding NavigateToGLReconciliationCommand}"
                    Content="Navigate to GL Reconciliation"
                    FontSize="14" />

                <!--  Row 3  -->
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding NavigateBackCommand}"
                    Content="Navigate Back"
                    FontSize="14" />

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Padding="15,10"
                    Command="{Binding ShowPlaceholderCommand}"
                    Content="Show Placeholder"
                    FontSize="14" />
            </Grid>

            <!--  Instructions  -->
            <Border
                Margin="0,30,0,0"
                Padding="15"
                Background="#FFF3CD"
                BorderBrush="#FFEAA7"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Phase 2 Testing Instructions:" />

                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        TextWrapping="Wrap">
                        <Run Text="1. Click the navigation buttons above to test view switching" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        TextWrapping="Wrap">
                        <Run Text="2. Verify that each button navigates to the corresponding placeholder view" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        TextWrapping="Wrap">
                        <Run Text="3. Test the 'Navigate Back' functionality" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        TextWrapping="Wrap">
                        <Run Text="4. Check that the status updates correctly with each navigation" />
                    </TextBlock>

                    <TextBlock
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{StaticResource AccentBrush}"
                        TextWrapping="Wrap">
                        <Run Text="✓ Navigation system working = Phase 2 complete!" />
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </Border>
</UserControl>